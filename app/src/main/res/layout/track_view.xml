<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingVertical="@dimen/offset_8">

    <ImageView
        android:id="@+id/image_view_cover"
        android:layout_width="@dimen/cover_side"
        android:layout_height="@dimen/cover_side"
        android:layout_gravity="center"
        android:layout_marginStart="@dimen/offset_16"
        android:src="@drawable/ic_cover_place_holder" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginHorizontal="@dimen/offset_8"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/text_view_track_name"
            style="@style/TrackNameTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="No Reply" />

        <TextView
            android:id="@+id/text_view_artist_and_time"
            style="@style/ArtistAndLengthTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="The Beatles â€¢ 5:12" />

    </LinearLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginEnd="@dimen/offset_20"
        android:src="@drawable/ic_arrow_forward" />

</LinearLayout>