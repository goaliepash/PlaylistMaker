<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.PlaylistMaker.MainActivityLayout" parent="Theme.PlaylistMaker">
        <item name="android:background">@color/yp_black</item>
        <item name="android:paddingHorizontal">@dimen/padding_horizontal</item>
    </style>

    <style name="TitleTextView">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">500</item>
        <item name="android:textSize">@dimen/title_text_size</item>
        <item name="android:textColor">@color/yp_white</item>
    </style>

    <style name="SettingsItemTextView">
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_weight">1</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textColor">@color/yp_white</item>
        <item name="android:textSize">@dimen/settings_item_text_size</item>
    </style>

</resources>