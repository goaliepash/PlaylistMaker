<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="BackImageView">
        <item name="tint">@color/back_image_view_tint</item>
    </style>

    <style name="TitleTextView">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">500</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/title_text_color</item>
    </style>

    <style name="SettingsItemTextView">
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textColor">@color/settings_item_text_color</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="SearchEditText">
        <item name="android:background">@drawable/edit_text_search_background</item>
        <item name="android:drawableTint">@color/yp_text_gray</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textColor">@color/yp_black</item>
        <item name="android:textColorHint">@color/yp_text_gray</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TrackNameTextView">
        <item name="android:textColor">@color/yp_black</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:lines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="ArtistAndLengthTextView">
        <item name="android:textColor">@color/yp_text_gray</item>
        <item name="android:textSize">11sp</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:lines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="PlaceholderMessageTextView">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:lineHeight">22sp</item>
        <item name="android:textColor">@color/placeholder_message_text_color</item>
        <item name="android:textSize">19sp</item>
    </style>

    <style name="PlaceholderRefreshButton">
        <item name="android:backgroundTint">@color/refresh_button_background_tint</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textColor">@color/refresh_button_text_color</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="SettingsSwitcher">
        <item name="thumbTint">@color/settings_switcher_thumb_tint</item>
        <item name="trackTint">@color/settings_switcher_track_tint</item>
        <item name="android:textAppearance">@style/SettingsItemTextView</item>
    </style>

    <style name="TrackInfoTitleTextView">
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textColor">@color/track_info_title_text_color</item>
        <item name="android:textSize">13sp</item>
    </style>

    <style name="TrackInfoValueTextView">
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textColor">@color/track_info_value_text_color</item>
        <item name="android:textSize">13sp</item>
    </style>

    <style name="TrackTimeTextView">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textColor">@color/track_time_text_color</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TrackArtistTextView">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textColor">@color/track_artist_text_color</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TrackNameInfoTextView">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textColor">@color/track_name_info_text_color</item>
        <item name="android:textSize">22sp</item>
    </style>

    <style name="PlaylistMakerTabLayoutText">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="PlaylistMakerTabLayout">
        <item name="android:background">@color/tab_layout_background</item>
        <item name="tabIndicatorColor">@color/playlist_maker_tab_layout_indicator_color</item>
        <item name="tabRippleColor">@null</item>
        <item name="tabTextColor">@color/playlist_maker_tab_layout_text_color</item>
        <item name="tabTextAppearance">@style/PlaylistMakerTabLayoutText</item>
        <item name="tabIndicatorFullWidth">true</item>
    </style>

    <style name="MainBottomNavigationView" parent="@style/Widget.MaterialComponents.BottomNavigationView">
        <item name="backgroundTint">@android:color/transparent</item>
        <item name="elevation">0dp</item>
        <item name="itemIconTint">@color/main_bottom_navigation_view_color</item>
        <item name="itemTextAppearanceActive">@style/BottomNavigationItemTextAppearance</item>
        <item name="itemTextAppearanceInactive">@style/BottomNavigationItemTextAppearance</item>
        <item name="itemTextColor">@color/main_bottom_navigation_view_color</item>
    </style>

    <style name="BottomNavigationItemTextAppearance">
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="PlaylistTextView">
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textColor">@color/playlist_text_view_text_color</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="CucumberButton">
        <item name="android:textAppearance">@style/CucumberButtonTextAppearance</item>
        <item name="android:textColor">@color/yp_white</item>
        <item name="cornerRadius">@dimen/offset_8</item>
    </style>

    <style name="CucumberButtonTextAppearance">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="InputLayout" parent="ThemeOverlay.Material3.AutoCompleteTextView.OutlinedBox.Dense">
        <item name="android:textColorHint">@color/input_text_color</item>
        <item name="hintTextAppearance">@style/HintTextAppearance</item>
    </style>

    <style name="HintTextAppearance">
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="InputEditText">
        <item name="android:textAppearance">@style/InputTextAppearance</item>
        <item name="android:textColor">@color/input_text_color</item>
    </style>

    <style name="InputTextAppearance">
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">16sp</item>
    </style>

</resources>